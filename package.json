{
  "name": "xplodencopy",
  "displayName": "Xplode 'n' Copy",
  "description": "Easy management of custom changes to exploded artifacts.",
  "version": "0.0.1",
  "publisher": "Martin Gasse",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xplodencopy.doCopy",
        "when": "isInConfiguredPath",
        "title": "%command.title%"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "xplodencopy.doCopy",
          
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Xplode 'n' Copy",
      "type": "object",
      "properties": {
        "source.pathPrefix": {
          "type": "string",
          "default": "build",
          "description": "Root path from which this extension will copy files."
        },
        "target.path": {
          "type": "string",
          "default": "custom",
          "description": "Path to be used as the target folder."
        }
      }
  }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.13.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "vscode-nls": "^5.2.0",
    "vscode-nls-dev": "^4.0.4"
  }
}
